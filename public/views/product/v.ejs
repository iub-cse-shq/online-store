  <script src="/lib/jquery/dist/jquery.min.js"></script>
  <script src="/vendor/ejs_production.js"></script>
  <script>
   var order = {
    cname: "",
    cphone:null,
    pname:"",
    price: null,
    quantity: null,
   cnumber:null
   
  };
  $('#cname').change(function(){
    order.cname = $('#cname').val();
  });
    $('#cphone').change(function(){
    order.cphone = $('#cphone').val();
  });
    $('#pname').change(function(){
    order.pname = $('#pname').val();
  });
  $('#price').change(function(){
    order.price = $('#price').val();
  });
  $('#quantity').change(function(){
    order.quantity = $('#quantity').val();
  });
   $('#cnumber').change(function(){
    order.cnumber = $('#cnumber').val();
  });
  $('#submit').click(function(){
    $.ajax({
      method:"POST",
      url:'/api/orders',
      data: order
    }).done(function(response){
      console.log(response);
     window.location.replace("/order/"+response._id);
    }).fail(function(response){
      $("#error").text(JSON.parse(response.responseText).message);
        console.log(JSON.parse(response.responseText).message);
    });

  });
 
  </script>
